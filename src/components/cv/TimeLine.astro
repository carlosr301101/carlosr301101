---
const { title, subtitle, link } = Astro.props
---

<div class="flex">
	<div class="education__time">
		<span class="mt-1 block h-4 w-4 rounded-full bg-primary"></span>
		<span class="education__line block h-full w-[2px] translate-x-[7px] bg-primary"></span>
	</div>
	<div class="experience__data bd-grid px-5">
		<h3 class="mb-1 font-semibold">{title}</h3>
		<span class="text-sm font-light">{subtitle}</span>

		<div class="mb-1 text-start text-sm">
			{
				link && (
					<a
						href={link}
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex animate-pulse items-center gap-1 text-sm font-light text-blue-500 transition-colors hover:text-blue-700"
					>
						Ver m√°s
						<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
							/>
						</svg>
					</a>
				)
			}
		</div>
		<p class="my-2 text-justify">
			<slot />
		</p>
	</div>
</div>
